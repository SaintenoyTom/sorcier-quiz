{
  "name": "sorcier-quiz",
  "version": "1.0.0",
  "main": "index.ts",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "lint": "eslint . --max-warnings=0",
    "test": "jest --ci --reporters=default --coverage",
    "test:ci": "jest --ci --reporters=default --coverage",
    "e2e:build": "detox build -c android.emu.release",
    "e2e": "detox test -c android.emu.release --headless",
    "healthcheck": "node -e \"require('http').createServer((req, res) => { if (req.url === '/health') { res.end('ok') } else { res.end('not found') }}).listen(3000)\" & sleep 2 && curl -f http://localhost:3000/health",
    "build:android": "cd android && ./gradlew bundleRelease",
    "bundle:android": "react-native bundle --platform android --dev false --entry-file index.js --bundle-output android/app/build/generated/assets/react/release/index.android.bundle --assets-dest android/app/src/main/res/",
    "sonar": "sonar-scanner"
  },
  "dependencies": {
    "@expo/vector-icons": "^15.0.2",
    "@react-native-async-storage/async-storage": "^2.2.0",
    "@react-navigation/native": "^7.1.18",
    "@react-navigation/stack": "^7.4.9",
    "@testing-library/react-native": "^13.3.3",
    "expo": "~54.0.13",
    "expo-haptics": "^15.0.7",
    "expo-notifications": "^0.32.12",
    "expo-sharing": "^14.0.7",
    "expo-status-bar": "~3.0.8",
    "prettier": "^3.6.2",
    "react": "19.1.0",
    "react-native": "0.81.4",
    "react-native-reanimated": "^4.1.3",
    "react-native-worklets": "^0.6.1",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@testing-library/jest-native": "^5.4.3",
    "@types/jest": "^30.0.0",
    "@types/react": "~19.1.0",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "detox": "^20.43.0",
    "eslint": "^9.37.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.0",
    "jest": "^30.2.0",
    "jest-expo": "^54.0.12",
    "typescript": "~5.9.2"
  },
